<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet ../../../css/style.css?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.alkfejl.view.controller.FilmekController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" styleClass="hatter" stylesheets="@../../../css/style.css" BorderPane.alignment="CENTER">
              <buttons>
                <Button mnemonicParsing="false" onAction="#filmHozzaad" text="Hozzáad">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
              </buttons>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </ButtonBar>
         </bottom>
         <top>
            <MenuBar styleClass="hatter" stylesheets="@../../../css/style.css" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="&lt; Főmenü">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#fomenu" text="Vissza" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <TableView fx:id="tabla" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="cimCol" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Cím" />
                <TableColumn fx:id="rendezoCol" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Rendező" />
                  <TableColumn fx:id="hosszCol" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" text="Hossz" />
                  <TableColumn fx:id="korhatarCol" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" text="Korhatár" />
                  <TableColumn fx:id="szerkesztCol" maxWidth="110.0" minWidth="110.0" prefWidth="110.0" text="Szerkeszt" />
              </columns>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
